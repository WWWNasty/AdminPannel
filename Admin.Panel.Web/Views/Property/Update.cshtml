@using Admin.Panel.Core.Entities.Questionary
@model Admin.Panel.Core.Entities.Questionary.ObjectProperty

@{
    ViewData["Title"] = "Редактирование свойства";
}
<form method="post" asp-antiforgery="true" class="needs-validation" novalidate>
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <div class="col">
                    <h4>@ViewBag.Title "@Model.Name"</h4>
                </div>
                <div class="col-md-3">
                    <div class="col">
                        <input asp-for="IsUsed" type="checkbox" class="form-check-input"/>
                        <label asp-for="IsUsed" class="form-check-label align-bottom">Это свойство активно</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label asp-for="NameInReport"></label>
            <input asp-for="NameInReport" class="form-control" required>
        </div>
    </div>
    <div class="form-group form-check">
        <div class="col-md-10">
            <input asp-for="IsUsedInReport" type="checkbox" class="form-check-input"/>
            <label asp-for="IsUsedInReport" class="form-check-label align-bottom"></label>
        </div>
    </div>
    @* <div class="form-group"> *@
    @*     <div class="col-md-10"> *@
    @*         <label asp-for="ReportCellStyle"></label> *@
    @*         <input asp-for="ReportCellStyle" class="form-control" required> *@
    @*     </div> *@
    @* </div> *@

    <div class="form-group col-md-10 mt-5">
        <button type="button" class="btn btn-outline-primary" id="back-button">Отмена</button>
        <button type="submit" class="btn btn-primary ml-2">Сохранить</button>
    </div>
</form>