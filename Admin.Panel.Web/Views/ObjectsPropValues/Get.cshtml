@using Admin.Panel.Core.Entities.Questionary
@using System.Security.Claims
@model Admin.Panel.Core.Entities.Questionary.QuestionaryObject

<h2>Объект</h2>

<div class="card-body">
    <h4 class="card-title">
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("ObjectEdit"))
            {
                <a asp-controller="ObjectsPropValues" asp-action="UpdateForUser" asp-route-Id="@Model.Id" class="text-success"> @Html.DisplayFor(modelItem => Model.Name)</a>
            }
            if (User.IsInRole("SuperAdministrator"))
            {
                <a asp-controller="ObjectsPropValues" asp-action="Update" asp-route-Id="@Model.Id" class="text-success">@Html.DisplayFor(modelItem => Model.Name)</a>
            }
        }
        </h4>
        <div class="card-body">
            <h7 class="card-title">@Model.CompanyName</h7>
        </div>
        <div class="card-body">
            <h7 class="card-title">@Model.Code</h7>
        </div>
        <div class="card-body">
            <h7 class="card-title">@Model.Description</h7>
        </div>
        <div class="card-body">
            <h7 class="card-title">@Model.Updated</h7>
        </div>
        <div class="card-body">
            <h7 class="card-title">@Model.ObjectTypeName</h7>
        </div>
    
    
    <div class="col">
        @foreach (var prop in Model.SelectedObjectPropertyValues)
        {
            <div class="row">
                <div class="col">
                    <div class="card-body">
                        <h7 class="card-title">@prop.Name</h7>
                    </div>
                </div>
                <div class="col">
                    <div class="card-body">
                        <h7 class="card-title">@prop.Value</h7>
                    </div>
                </div>
            </div>
        }
    </div>
    
 
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}