@using Microsoft.AspNetCore.Identity
@using Admin.Panel.Data.Repositories
@using Admin.Panel.Core.Entities

@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right" asp-antiforgery="true">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link">Привет, @User.Identity.Name!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти</button>
            </li>
        </ul>
    </form>
    
        <a asp-controller="Account" asp-action="ChangePassword" class="nav-link">Изменить пароль</a>
        <a asp-controller="ManageUser" asp-action="GetAllUsers" class="nav-link">Все пользователи</a>
 
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register" class="nav-link">Создать пользователя</a></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="LogIn" class="nav-link">Войти</a></li>
    </ul>
}